@model EmployeeForm.Models.ViewMedels.CategoryViewModel

@{
    ViewData["Title"] = "Index";
}

<form asp-action="Index" method="post">
    @for(int i = 0; i < Model.ListCategory.Count; i++)
    {
        <input type="radio" asp-for="SelectedAns" value="@Model.ListCategory[i].Id" />
        <label asp-for="@Model.ListCategory[i].Id">@Model.ListCategory[i].Name</label>
        <input type="hidden" asp-for="@Model.ListCategory[i].Id" />
    }
    <input type="submit" value="submit" />
</form>

